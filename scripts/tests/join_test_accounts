DROP FUNCTION public_reference.join_test_accounts();

CREATE OR REPLACE FUNCTION public_reference.join_test_accounts(
	)
    RETURNS TABLE(
		hive_rowid_t bigint,
		id_t int,
		name_t character varying,
		add_delete_modif text

	) 
    LANGUAGE 'plpgsql'
    COST 100
    VOLATILE PARALLEL UNSAFE
    ROWS 1000

AS $BODY$
DECLARE
begin

	return query 
	select * from(
			(select 
						ao.hive_rowid, ao.id, ao.name, '2' as note
			from 
				public_reference.accounts as ao inner join public.accounts as aoc
			on ao.id = aoc.id
			where 
				ao.hive_rowid<>aoc.hive_rowid or 
				ao.name<>aoc.name
			 )

			union all

			(select 
				*, '-1' as note
 			 from 
				public_reference.accounts as ao
			 WHERE not EXISTS (
				select * from public.accounts as aoc where ao.id = aoc.id)
			)

			union all

			(select 
				*, '+1' as note
 			 from 
				public.accounts as aoc
			 WHERE not EXISTS (
				select * from public_reference.accounts ao where ao.id = aoc.id)
			)
	)as x order by note ;

end;
$BODY$;

ALTER FUNCTION public_reference.join_test_accounts()
    OWNER TO hivemind_ci;
